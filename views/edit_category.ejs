<!DOCTYPE html>
<html>
  <head>
    <title>Modifica categoria</title>
    <style>
      body { font-family: Arial; margin: 40px; background: #f4f6f8; }
      .card {
        background: white;
        border-radius: 12px;
        padding: 24px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: auto;
      }
      h1 { text-align: center; color: #004aad; }
      label { display: inline-block; width: 120px; }
      button {
        background: #004aad;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 8px 16px;
        cursor: pointer;
      }
      button:hover { background: #0062e0; }
      a { color: #004aad; text-decoration: none; }
    </style>
  </head>
  <body>
    <div class="card">
      <h1>Modifica categoria: <%= category.name %></h1>
      <form method="POST" action="/admin/category/edit/<%= encodeURIComponent(category.name) %>">
        <p><b>Giorni di allenamento:</b></p>
        <% const giorni = ["Luned√¨","Marted√¨","Mercoled√¨","Gioved√¨","Venerd√¨","Sabato","Domenica"]; %>
        <% giorni.forEach(g => { 
             const canon = g.toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
             const checked = category.days.includes(canon);
        %>
          <label>
            <input type="checkbox" name="days" value="<%= g %>" <%= checked ? "checked" : "" %>>
            <%= g %>
          </label><br>
        <% }) %>
        <br>
        <button type="submit">üíæ Salva modifiche</button>
      </form>
      <p style="text-align:center;margin-top:20px;">
        <a href="/admin">‚¨ÖÔ∏è Torna alla dashboard</a>
      </p>
    </div>
  </body>
</html>
