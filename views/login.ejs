<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Progressive Web App setup -->
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#16a34a">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="Assenza Facile">

  <title>Accesso Genitore / Admin</title>

  <style>
    body {
      font-family: "Segoe UI", system-ui, sans-serif;
      background: #f0fdf4;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .card {
      background: white;
      border-radius: 14px;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
      padding: 2rem;
      width: 350px;
      text-align: center;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

    h1 {
      color: #166534;
      margin-bottom: 1.5rem;
      font-size: 1.6rem;
    }

    label {
      display: block;
      margin-top: 0.8rem;
      text-align: left;
      color: #166534;
      font-weight: 600;
    }

    input {
      width: 100%;
      padding: 0.5rem;
      margin-top: 0.3rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      transition: border-color 0.2s;
    }

    input:focus {
      outline: none;
      border-color: #16a34a;
      box-shadow: 0 0 4px #bbf7d0;
    }

    button {
      width: 100%;
      margin-top: 1rem;
      padding: 0.6rem;
      background: #16a34a;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.2s;
    }

    button:hover {
      background: #15803d;
    }

    .error {
      color: #dc2626;
      margin-top: 1rem;
      font-weight: 600;
    }

    .link {
      display: block;
      margin-top: 1rem;
      color: #166534;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.2s;
    }

    .link:hover {
      text-decoration: underline;
      color: #14532d;
    }

    /* Bottone installa app */
    #installBtn {
      display: none;
      margin-top: 1rem;
      padding: 0.6rem 1rem;
      background: #007bff;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      font-weight: 600;
    }

    #installBtn:hover {
      background: #0056b3;
    }
  </style>
</head>

<body>
  <div class="card">
    <h1>Accesso</h1>

    <form action="/login" method="POST">
      <label>Email</label>
      <input type="email" name="email" required>

      <label>Password</label>
      <input type="password" name="password" required>

      <button type="submit">Accedi</button>
    </form>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <a href="/register" class="link">üìù Non hai un account? Registrati</a>

    <!-- Pulsante installa PWA -->
    <button id="installBtn">üì± Installa Assenza Facile</button>
  </div>

  <script>
    // ‚úÖ Registrazione del Service Worker
    if ("serviceWorker" in navigator) {
      navigator.serviceWorker
        .register("/service-worker.js", { scope: "/" })
        .then(() => console.log("‚úÖ Service Worker registrato"))
        .catch(err => console.error("‚ùå Errore Service Worker:", err));
    }

    // ‚úÖ Gestione evento "beforeinstallprompt"
    let deferredPrompt;
    const installBtn = document.getElementById("installBtn");

    window.addEventListener("beforeinstallprompt", (e) => {
      e.preventDefault();
      deferredPrompt = e;
      installBtn.style.display = "block"; // mostra pulsante personalizzato
    });

    installBtn.addEventListener("click", async () => {
      if (!deferredPrompt) return;
      deferredPrompt.prompt();
      const { outcome } = await deferredPrompt.userChoice;
      console.log("Scelta utente:", outcome);
      deferredPrompt = null;
      installBtn.style.display = "none";
    });

    // ‚úÖ Mostra sempre il pulsante su iOS (fallback manuale)
    const isIOS = /iphone|ipad|ipod/i.test(window.navigator.userAgent);
    const isInStandalone = window.navigator.standalone === true;
    if (isIOS && !isInStandalone) {
      installBtn.style.display = "block";
      installBtn.textContent = "üì≤ Aggiungi a Home (Safari: Condividi ‚Üí Aggiungi)";
    }

    window.addEventListener("appinstalled", () => {
      console.log("üì± Assenza Facile installata con successo!");
    });
  </script>
